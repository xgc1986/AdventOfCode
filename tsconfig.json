{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "./dist/",
    "paths": {
      "src/*": [ "*" ],
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types", "./ext"]
  },
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
